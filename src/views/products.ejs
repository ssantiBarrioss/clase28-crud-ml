<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
		<% products.forEach(producto=>{ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= producto.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= producto.image %>" alt="imagen de <%= producto.name %>">
						</figure>
						<article class="product-box_data">
							<h2>$<%= producto.discount > 0 ? toThousand(producto.price - ((producto.price * producto.discount) / 100)): toThousand (producto.price) %></h2>
							<span>$<%= producto.discount > 0 ? producto.discount + "% OFF" : null %> </span>
							<p><%= producto.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
	   <% }) %>
			
		
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>